<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="Profile">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="loginId">
                <display-name xml:lang="x-default">Login ID</display-name>
                <type>text</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </custom-attribute-definitions>
    </type-extension>

     <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="enableForceLogout">
                <display-name xml:lang="x-default">Enable Force Logout</display-name>
                <description xml:lang="x-default">When enabled, customers who have logged in into multiple browsers/sessions will be forcefully logged out, when on any of the sessions the customer password is changed.</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Force Logout">
                <display-name xml:lang="x-default">Force Logout Configurations</display-name>
                <attribute attribute-id="enableForceLogout"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>